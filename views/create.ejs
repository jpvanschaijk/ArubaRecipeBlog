<%- include('partials/header') %>

<main class="submit-page">
  <header class="submit-header">
    <h1>Submit a Recipe</h1>
    <p>Share a dish, a memory, or a kitchen story.</p>
  </header>

  <form class="recipe-form" action="/recipes" method="POST" enctype="multipart/form-data">
    
    <!-- Recipe Title -->
    <section class="form-section">
      <label>Recipe Title</label>
      <input type="text" name="title" placeholder="Sunday Jerk Chicken" required>
    </section>

    <!-- Description -->
    <section class="form-section">
      <label>Short Description</label>
      <textarea name="description" rows="3" required></textarea>
    </section>

    <!-- Ingredients -->
    <section class="form-section">
      <label>Ingredients</label>
      <div id="ingredients-list"></div>
      <input type="text" id="ingredient-input" placeholder="Add ingredient">
      <button type="button" id="add-ingredient">Add Ingredient</button>
      <!-- hidden input to send ingredients as comma-separated -->
      <input type="hidden" name="ingredients" id="ingredients-hidden">
    </section>

    <!-- Instructions -->
    <section class="form-section">
      <label>Instructions</label>
      <textarea name="instructions" rows="8" required></textarea>
    </section>

    <!-- Image Upload -->
    <section class="form-section">
      <label>Recipe Image</label>
      <div id="drop-zone">
        Drag & drop an image here or click to select
        <input type="file" name="image" id="image-input" accept="image/*">
      </div>
      <img id="image-preview" src="#" alt="Image Preview">
    </section>

    <button class="submit-btn" type="submit">Publish Recipe</button>
  </form>
</main>

<%- include('partials/footer') %>
